<Window x:Class="SustainabilityDBM.win_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SustainabilityDBM"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="393*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <xctk:PropertyGrid x:Name="prop_Settings" Margin="10,10,10,18.492" PropertyValueChanged="prop_Settings_PropertyValueChanged" ShowTitle="False" ShowSortOptions="False" ShowSearchBox="False"/>
        <Button x:Name="btn_SaveAndExit" Content="Save and Exit" Margin="10,0,0,10" Click="btn_SaveAndExit_Click" Grid.RowSpan="2" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="120"/>
        <Button x:Name="btn_TestConnection" Content="Test Connection" Margin="0,0,10,10" Click="btn_TestConnection_Click" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120" Grid.RowSpan="2"/>
    </Grid>
</Window>
