<Window x:Class="SustainabilityDBM.win_Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SustainabilityDBM"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <xctk:PropertyGrid x:Name="prop_Settings" Margin="10,10,10,44" PropertyValueChanged="prop_Settings_PropertyValueChanged"/>
        <Button x:Name="btn_SaveAndExit" Content="Save and Exit" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top" Width="120" Height="29"/>
        <Button x:Name="btn_TestConnection" Content="Test Connection" HorizontalAlignment="Left" Margin="662,384,0,0" VerticalAlignment="Top" Width="120" Height="25" Click="btn_TestConnection_Click"/>
        <Button x:Name="btn_ResetSettings" Content="Reset Settings" HorizontalAlignment="Left" Margin="522,384,0,0" VerticalAlignment="Top" Width="120" Height="25"/>
    </Grid>
</Window>
